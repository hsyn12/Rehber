<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cookie"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/default_bg_color"
    android:orientation="vertical"
    android:padding="0dp">

    <View
        android:id="@+id/hr_duration_top"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_gravity="top"
        android:background="@color/c_black"
        android:padding="0dp"
        android:visibility="gone"
        tools:visibility="visible" />

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_16dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="@dimen/dimen_16dp">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:contentDescription="@string/no_information"
            android:visibility="gone"
            tools:src="@drawable/info"
            tools:visibility="visible" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:visibility="gone"
                tools:text="Title"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tv_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/geometric_regular"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:visibility="gone"
                tools:text="Message..."
                tools:visibility="visible" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/btn_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="@dimen/dimen_16dp"
        android:background="@drawable/rectangle"
        android:paddingStart="@dimen/dimen_16dp"
        android:paddingTop="4dp"
        android:paddingEnd="@dimen/dimen_16dp"
        android:paddingBottom="4dp"
        android:text="@string/action"
        android:textColor="@color/default_action_color"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="invisible"
        tools:visibility="visible" />

    <View
        android:id="@+id/hr_duration"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:background="@color/c_black" />

</LinearLayout>