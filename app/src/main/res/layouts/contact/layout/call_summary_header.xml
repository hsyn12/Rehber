<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		android:id="@+id/call_summary_header_container"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/light_background">

	<RelativeLayout
			android:id="@+id/call_summary_header"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@drawable/ripple_accent"
			android:clickable="true"
			android:focusable="true"
			android:paddingTop="@dimen/contact_details_item_top_bottom_padding"
			android:paddingBottom="@dimen/contact_details_item_top_bottom_padding">

		<ImageView
				android:id="@+id/call_summary_icon"
				android:layout_width="25dp"
				android:layout_height="25dp"
				android:layout_centerVertical="true"
				android:layout_gravity="center_vertical"
				android:layout_marginStart="12dp"
				android:contentDescription="@string/call_summary_icon_description"
				android:src="@drawable/call_summary"
				app:tint="@color/alev" />

		<TextView
				style="@style/HeaderText"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:layout_gravity="center_vertical"
				android:layout_marginStart="@dimen/activity_horizontal_margin"
				android:layout_toEndOf="@id/call_summary_icon"
				android:text="Arama Ã–zeti"
				tools:ignore="HardcodedText,SpUsage" />

		<ImageView
				android:id="@+id/expand_indicator"
				android:layout_width="12dp"
				android:layout_height="12dp"
				android:layout_alignParentEnd="true"
				android:layout_centerVertical="true"
				android:layout_marginEnd="@dimen/dimen_16dp"
				android:alpha="0.6"
				android:contentDescription="@string/call_summary_expand_icon_description"
				android:src="@drawable/down_indicator" />


	</RelativeLayout>
</LinearLayout>
