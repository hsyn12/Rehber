	<TextView
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:layout_marginStart="8dp"
			android:layout_marginEnd="8dp"
			android:background="@color/call_details_summary_hr_color" />

	<LinearLayout
			android:id="@+id/total_row"
			android:layout_width="match_parent"
			android:layout_height="@dimen/call_summary_row_height"
			android:layout_weight="1"
			android:background="@drawable/ripple_accent"
			android:clickable="true"
			android:focusable="true"
			android:orientation="horizontal"
			android:paddingStart="16dp"
			android:paddingEnd="6dp">

		<Button
				android:id="@+id/total"
				style="@style/CallDetailsText"
				android:layout_width="@dimen/call_details_summary_first_item_width"
				android:layout_height="match_parent"
				android:background="@drawable/ripple_accent"
				android:gravity="start|center_vertical"
				android:paddingStart="30dp"
				android:text="@string/total"
				android:textAllCaps="false" />

		<TextView
				android:id="@+id/total_call"
				style="@style/CallDetailsTextSecondary"
				android:layout_width="@dimen/call_details_summary_column_width"
				android:layout_height="wrap_content"
				android:layout_marginStart="17dp"
				android:gravity="start"
				android:text="@string/val"
				android:textAlignment="textStart" />

		<TextView
				android:id="@+id/total_call_duration"
				style="@style/CallDetailsTextSecondary"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginStart="@dimen/dimen_16dp"
				tools:text="05:15:34" />

	</LinearLayout>

</LinearLayout>