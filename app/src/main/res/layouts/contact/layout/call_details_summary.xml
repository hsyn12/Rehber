<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@color/light_background"
		android:orientation="vertical"
		android:paddingTop="6dp"
		android:paddingEnd="@dimen/dimen_16dp"
		android:paddingBottom="6dp">

	<LinearLayout
			android:id="@+id/header_row"
			android:layout_width="match_parent"
			android:layout_height="48dp"
			android:background="@drawable/ripple_accent"
			android:clickable="true"
			android:focusable="true"
			android:orientation="horizontal">

		<Button
				style="@style/CallDetailsText"
				android:layout_width="@dimen/call_details_summary_first_item_width"
				android:layout_height="match_parent"
				android:background="@drawable/ripple_accent"
				android:drawablePadding="6dp"
				android:gravity="start|center_vertical"
				android:textAllCaps="false" />

		<TextView
				android:layout_width="@dimen/call_details_summary_hr_width"
				android:layout_height="match_parent"
				android:layout_marginEnd="@dimen/call_details_summary_hr_end_margin"
				android:background="@color/call_details_summary_hr_color" />

		<TextView
				style="@style/CallDetailsText"
				android:layout_width="@dimen/call_details_summary_column_width"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:gravity="center"
				android:text="@string/w_calling"
				android:textColor="@color/summary_second_color" />

		<TextView
				android:layout_width="@dimen/call_details_summary_hr_width"
				android:layout_height="match_parent"
				android:layout_marginEnd="@dimen/call_details_summary_hr_end_margin"
				android:background="@color/call_details_summary_hr_color" />

		<TextView
				style="@style/CallDetailsText"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginEnd="@dimen/dimen_16dp"
				android:gravity="end"
				android:text="@string/speaking"
				android:textAlignment="textEnd"
				android:textColor="@color/summary_second_color" />

	</LinearLayout>

	<LinearLayout
			android:id="@+id/incoming_row"
			android:layout_width="match_parent"
			android:layout_height="@dimen/call_summary_row_height"
			android:layout_weight="1"
			android:background="@drawable/ripple_accent"
			android:clickable="true"
			android:focusable="true"
			android:orientation="horizontal"
			android:paddingStart="16dp"
			android:paddingEnd="6dp">

		<Button
				android:id="@+id/incomming"
				style="@style/CallDetailsText"
				android:layout_width="@dimen/call_details_summary_first_item_width"
				android:layout_height="match_parent"
				android:background="@drawable/ripple_accent"
				android:drawableStart="@drawable/incomming_call"
				android:drawablePadding="6dp"
				android:gravity="start|center_vertical"
				android:text="@string/incoming"
				android:textAllCaps="false" />

		<TextView
				android:layout_width="@dimen/call_details_summary_hr_width"
				android:layout_height="match_parent"
				android:layout_marginEnd="@dimen/call_details_summary_hr_end_margin"
				android:background="@color/call_details_summary_hr_color" />

		<TextView
				android:id="@+id/incoming_call"
				style="@style/CallDetailsTextSecondary"
				android:layout_width="@dimen/call_details_summary_column_width"
				android:layout_height="wrap_content"
				android:gravity="start"
				android:text="@string/val"
				android:textAlignment="textStart" />

		<TextView
				android:layout_width="@dimen/call_details_summary_hr_width"
				android:layout_height="match_parent"
				android:layout_marginEnd="@dimen/call_details_summary_hr_end_margin"
				android:background="@color/call_details_summary_hr_color" />

		<TextView
				android:id="@+id/incoming_call_duration"
				style="@style/CallDetailsTextSecondary"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				tools:text="00:15:34" />

	</LinearLayout>

	<LinearLayout
			android:id="@+id/outgoing_row"
			android:layout_width="match_parent"
			android:layout_height="@dimen/call_summary_row_height"
			android:layout_weight="1"
			android:background="@drawable/ripple_accent"
			android:clickable="true"
			android:focusable="true"
			android:orientation="horizontal"
			android:paddingStart="16dp"
			android:paddingEnd="6dp">

		<Button
				android:id="@+id/outgoing"
				style="@style/CallDetailsText"
				android:layout_width="@dimen/call_details_summary_first_item_width"
				android:layout_height="match_parent"
				android:background="@drawable/ripple_accent"
				android:drawableStart="@drawable/outgoing_call"
				android:drawablePadding="6dp"
				android:gravity="start|center_vertical"
				android:text="@string/outgoing"
				android:textAllCaps="false" />

		<TextView
				android:layout_width="@dimen/call_details_summary_hr_width"
				android:layout_height="match_parent"
				android:layout_marginEnd="@dimen/call_details_summary_hr_end_margin"
				android:background="@color/call_details_summary_hr_color" />

		<TextView
				android:id="@+id/outgoing_call"
				style="@style/CallDetailsTextSecondary"
				android:layout_width="@dimen/call_details_summary_column_width"
				android:layout_height="wrap_content"
				android:gravity="start"
				android:text="@string/val"
				android:textAlignment="textStart" />

		<TextView
				android:layout_width="@dimen/call_details_summary_hr_width"
				android:layout_height="match_parent"
				android:layout_marginEnd="@dimen/call_details_summary_hr_end_margin"
				android:background="@color/call_details_summary_hr_color" />

		<TextView
				android:id="@+id/outgoing_call_duration"
				style="@style/CallDetailsTextSecondary"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				tools:text="00:15:34" />

	</LinearLayout>

	<LinearLayout
			android:id="@+id/missed_row"
			android:layout_width="match_parent"
			android:layout_height="@dimen/call_summary_row_height"
			android:layout_weight="1"
			android:background="@drawable/ripple_accent"
			android:clickable="true"
			android:focusable="true"
			android:orientation="horizontal"
			android:paddingStart="16dp"
			android:paddingEnd="6dp">

		<Button
				android:id="@+id/missed"
				style="@style/CallDetailsText"
				android:layout_width="@dimen/call_details_summary_first_item_width"
				android:layout_height="match_parent"
				android:background="@drawable/ripple_accent"
				android:drawableStart="@drawable/missed_call"
				android:drawablePadding="6dp"
				android:gravity="start|center_vertical"
				android:text="@string/missed"
				android:textAllCaps="false" />

		<TextView
				android:layout_width="@dimen/call_details_summary_hr_width"
				android:layout_height="match_parent"
				android:layout_marginEnd="@dimen/call_details_summary_hr_end_margin"
				android:background="@color/call_details_summary_hr_color" />

		<TextView
				android:id="@+id/missed_call"
				style="@style/CallDetailsTextSecondary"
				android:layout_width="@dimen/call_details_summary_column_width"
				android:layout_height="wrap_content"
				android:gravity="start"
				android:text="@string/val"
				android:textAlignment="textStart" />

		<TextView
				android:layout_width="@dimen/call_details_summary_hr_width"
				android:layout_height="match_parent"
				android:layout_marginEnd="@dimen/call_details_summary_hr_end_margin"
				android:background="@color/call_details_summary_hr_color" />

	</LinearLayout>

	<LinearLayout
			android:id="@+id/rejected_row"
			android:layout_width="match_parent"
			android:layout_height="@dimen/call_summary_row_height"
			android:layout_weight="1"
			android:background="@drawable/ripple_accent"
			android:clickable="true"
			android:focusable="true"
			android:orientation="horizontal"
			android:paddingStart="16dp"
			android:paddingEnd="6dp">

		<Button
				android:id="@+id/rejected"
				style="@style/CallDetailsText"
				android:layout_width="@dimen/call_details_summary_first_item_width"
				android:layout_height="match_parent"
				android:background="@drawable/ripple_accent"
				android:drawableStart="@drawable/rejected_call"
				android:drawablePadding="6dp"
				android:gravity="start|center_vertical"
				android:text="@string/rejected"
				android:textAllCaps="false" />

		<TextView
				android:layout_width="@dimen/call_details_summary_hr_width"
				android:layout_height="match_parent"
				android:layout_marginEnd="@dimen/call_details_summary_hr_end_margin"
				android:background="@color/call_details_summary_hr_color" />

		<TextView
				android:id="@+id/rejected_call"
				style="@style/CallDetailsTextSecondary"
				android:layout_width="@dimen/call_details_summary_column_width"
				android:layout_height="wrap_content"
				android:gravity="start"
				android:text="@string/val"
				android:textAlignment="textStart" />

		<TextView
				android:layout_width="@dimen/call_details_summary_hr_width"
				android:layout_height="match_parent"
				android:layout_marginEnd="@dimen/call_details_summary_hr_end_margin"
				android:background="@color/call_details_summary_hr_color" />

	</LinearLayout>

