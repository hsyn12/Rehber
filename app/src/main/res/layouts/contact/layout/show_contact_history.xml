<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		android:id="@+id/show_history_layout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="3dp"
		android:layout_marginBottom="8dp"
		android:background="@color/light_background"
		android:orientation="vertical"
		android:translationZ="1dp">

	<RelativeLayout
			android:id="@+id/contact_history_item"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:clickable="true"
			android:focusable="true"
			android:paddingVertical="8dp">

		<ImageView
				android:id="@+id/contact_history_icon"
				android:layout_width="25dp"
				android:layout_height="25dp"
				android:layout_centerVertical="true"
				android:layout_marginStart="@dimen/dimen_16dp"
				app:srcCompat="@drawable/history"
				tools:ignore="ContentDescription" />

		<TextView
				android:id="@+id/text_show_calls"
				style="@style/HeaderText"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:layout_marginStart="@dimen/activity_vertical_margin"
				android:layout_toEndOf="@id/contact_history_icon"
				android:text="@string/show_contact_history" />

		<ProgressBar
				android:id="@+id/historyProgress"
				android:layout_width="25dp"
				android:layout_height="25dp"
				android:layout_alignParentEnd="true"
				android:layout_centerVertical="true"
				android:layout_marginEnd="16dp"
				android:visibility="gone"
				tools:visibility="visible" />

	</RelativeLayout>

</LinearLayout>

