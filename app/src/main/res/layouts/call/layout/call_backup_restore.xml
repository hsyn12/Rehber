<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:padding="@dimen/dimen_16dp">
	
	<com.tr.hsyn.htext.evaporate.EvaporateTextView
			android:textColor="@color/text_tree_d_light"
			android:fontFamily="@font/r"
			android:id="@+id/text_process"
			android:textSize="20sp"
			android:gravity="center"
			tools:text="0546 493 7530"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			android:layout_width="0dp"
			android:layout_height="wrap_content"/>

	<ProgressBar
			android:id="@+id/progress_restore"
			style="@style/Widget.AppCompat.ProgressBar.Horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:indeterminate="true"
			android:max="100"
			android:min="0"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@id/text_process" />
	
	<TextView
			android:textSize="16sp"
			android:fontFamily="@font/hind_rg"
			android:id="@+id/text_percent_progress"
			tools:text="35 %"
			app:layout_constraintTop_toBottomOf="@id/progress_restore"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>