<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DefaultDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#2196F3</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:textColorPrimary">#263238</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="BaseText" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>


    <style name="DialogAnimationBounce">
        <item name="android:windowEnterAnimation">@anim/bounce_in</item>
        <item name="android:windowExitAnimation">@anim/shrink_exit</item>
    </style>

    <style name="InBounceOutAway">
        <item name="android:windowEnterAnimation">@anim/bounce_in</item>
        <item name="android:windowExitAnimation">@anim/bounce_out</item>
    </style>
</resources>