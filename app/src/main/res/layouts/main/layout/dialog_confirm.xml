<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">

	<RelativeLayout
			android:id="@+id/dialog_confirm_head"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingTop="8dp"
			android:paddingBottom="8dp"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			tools:background="#CCF44336">

		<TextView
				android:id="@+id/dialog_confirm_title"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerInParent="true"
				android:fontFamily="@font/didact"
				android:textColor="#eee"
				android:textSize="21sp"
				tools:text="Title" />

	</RelativeLayout>

	<LinearLayout
			android:id="@+id/dialog_confirm_body"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="#fff"
			android:orientation="vertical">

		<TextView
				android:id="@+id/dialog_confirm_message"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="16dp"
				android:layout_marginTop="16dp"
				android:fontFamily="@font/didact"
				android:textColor="#99333333"
				android:textSize="19sp"
				tools:text="Message" />

		<Button
				android:id="@+id/dialog_confirm_button"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="bottom|end"
				android:layout_marginTop="36dp"
				android:layout_marginEnd="16dp"
				android:layout_marginBottom="8dp"
				android:background="#0fff"
				android:fontFamily="@font/didact"
				android:minHeight="48dp"
				android:textAllCaps="false"
				android:textColor="#78909C"
				android:textSize="19sp"
				android:textStyle="bold"
				tools:text="Confirm" />

	</LinearLayout>
</LinearLayout>